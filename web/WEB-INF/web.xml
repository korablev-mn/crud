<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/hibernate.cfg..xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>RegistrationUserServlet</servlet-name>
        <servlet-class>servlet.RegistrationUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationUserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddingUserServlet</servlet-name>
        <servlet-class>servlet.AddingUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddingUserServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>servlet.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/user/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserFromIDServlet</servlet-name>
        <servlet-class>servlet.DeleteUserFromIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserFromIDServlet</servlet-name>
        <url-pattern>/user/del</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

</web-app>